@using Core.Web.Helpers
@using MyWeb.ViewModels.Statement
@model dynamic

<div ng-controller="MasterParameterController as vm">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <div class="row">
                    <div class="col-lg-10">
                        <h1>Master Parameter</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
