    <div>
        @(Html.Angular().GridFor("vm.GetPage")
                .Message("vm.message")
                .SearchParams("vm.searchParams")
                .TableActions("vm.tableActions")
                .HideSearch()
                .RefreshData("vm.refreshData")
                        .Columns<MasterParameterViewModel>(config =>
                        {
