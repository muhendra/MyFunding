@model IEnumerable<MyWeb.ViewModels.Menus.HomeMenuRoleViewModel>
<body>    
    <div class="row">
        <div class="col-lg-12">
            <br />
                @if (Model.Count() == 1)
                {
                    <div>
                        @foreach (var item in Model)
                        {
                            <h2>@item.Title</h2>   
                            @Html.Partial("~/views/" + item.FolderView + "/" + item.NameCshtml + ".cshtml")
                        }
                    </div>
                }
                else if (Model.Count() > 0)
	            {
                    int TabCount = 0, tabContentCount = 0;
                    <div>
                        <ul class="nav nav-tabs" role="tablist">
                            @foreach (var item in Model)
                            {
                                string namaTab = "tab" + TabCount.ToString();
                                string classHtml = TabCount == 0 ? "active" : "";
                                TabCount++;
                                <li role="presentation" class="@classHtml"><a href="#@namaTab" aria-controls="@namaTab" role="tab" data-toggle="tab">@item.Title</a></li>
                            }
                        </ul>

                        <div class="tab-content">
                            @foreach (var item in Model)
                            {
                                string namaTab = "tab" + tabContentCount.ToString();
                                string classHtml = tabContentCount == 0 ? "active" : "";
                                tabContentCount++;

                                <div role="tabpanel" class="tab-pane @classHtml" id="@namaTab">
                                    @Html.Partial("~/views/" + item.FolderView + "/" + item.NameCshtml + ".cshtml")
                                </div>
                            }
                        </div>

                    </div>
                }else
                {
                 <div style="position:absolute; left:0;right:0;bottom:0;top:0;vertical-align:middle;text-align:center">
                    <img src="~/Images/bankmayora_home.jpg" width="600" height="400" alt="Bank Mayora" />
                 </div>
                }
            
        </div>
        <!-- /.col-lg-12 ~/views/ABC/XXX.cshtml -->
    </div>    
</body>