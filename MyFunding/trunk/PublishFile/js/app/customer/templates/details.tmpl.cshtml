@using Core.Web.Helpers
@model MyWeb.ViewModels.Customers.CustomerViewModel
@{
    var customer = Html.Angular().ModelFor("vm.customer");
}
<div class="panel panel-default">
    <div class="panel-heading">
        Detail Customer : @customer.BindingFor(x => x.Name)
        <div class="pull-right">
            <a href="" class="btn btn-green" ng-click="vm.edit()"><i class="fa fa-edit"></i> Edit </a>            
        </div>
    </div>
    <table class="table" ng-show="vm.selectedView == 'details'">
        <tr class="info text-center" ng-show="@customer.ExpressionFor(x => x.TerminationDate)">
            <td colspan="2">
                Inactive Customer
            </td>
        </tr>
      
        <tr>
            <th>Customer Type</th>
            <td>
                @customer.BindingFor(x => x.CustomerType)
            </td>
        </tr>
        <tr>
            <th>Name</th>
            <td>
                @customer.BindingFor(x => x.Name)
            </td>
        </tr>
        <tr>
            <th>Address</th>
            <td>
                @customer.BindingFor(x => x.Address)
            </td>
        </tr>
        <tr>
            <th>E-Mail</th>
            <td>
                @customer.BindingFor(x => x.Email)
            </td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>
                @customer.BindingFor(x => x.Phone)
            </td>
        </tr>
    </table>

</div>
